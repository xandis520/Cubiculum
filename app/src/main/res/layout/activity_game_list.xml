<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".GameListActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/game_machine"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/first_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@android:color/black"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                <TextView
                    android:id="@+id/welcomeText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cześć Gabi"
                    android:textColor="#363A43"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Wpisz tytuł filmu, który chcesz obejrzeć z Adrianem"
                    android:textColor="#7A8089"
                    android:textSize="16sp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/movieTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tytuł filmu" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/startButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/red"
                    android:text="Zapisz"
                    android:textColor="@android:color/white"></Button>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@android:color/black"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/welcomeText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cześć Gabi"
                        android:textColor="#363A43"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Wpisz tytuł filmu, który chcesz obejrzeć z Adrianem"
                        android:textColor="#7A8089"
                        android:textSize="16sp"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/movieTitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tytuł filmu" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/startButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@color/red"
                        android:text="Zapisz"
                        android:textColor="@android:color/white"></Button>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@android:color/black"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/welcomeText3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cześć Gabi"
                        android:textColor="#363A43"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Wpisz tytuł filmu, który chcesz obejrzeć z Adrianem"
                        android:textColor="#7A8089"
                        android:textSize="16sp"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/movieTitle3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tytuł filmu" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/startButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@color/red"
                        android:text="Zapisz"
                        android:textColor="@android:color/white"></Button>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>